generator client {
  provider = "prisma-client"

  // Workaround for "Prisma Client did not initialize yet" issue.
  // Need to specify output before running 'prisma generate', issues since Prisma 7.0.0
  // See discussion: https://stackoverflow.com/questions/67746885/prisma-client-did-not-initialize-yet-please-run-prisma-generate-and-try-to-i#comment140555396_79543758
  output = "../src/lib/prisma"
}

datasource db {
  provider = "postgresql"
}

// Define the Enum for status
enum TodoStatus {
  PENDING
  DONE
  REMINDER_DUE
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  password     String
  refreshToken String?
  createdAt    DateTime @default(now())

  todos Todo[]
}

model Todo {
  id          String     @id @default(uuid())
  title       String
  description String     @default("")
  status      TodoStatus @default(PENDING)
  remindAt    DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}
